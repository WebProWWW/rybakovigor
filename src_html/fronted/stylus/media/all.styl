.bg-logo
    background white url('../img/bg-logo.jpg') 50% 50% no-repeat
    background-size contain

.bg-a
    background #272629 url('../img/bg-1.jpg') 50% 0% no-repeat
    background-size cover
    min-height 300px

.img-a
    mpd(0 auto -40px)
    max-width 100%

.img-b
    mpd(15px auto -35px)
    max-width 100%

.re
    &-img
        mpd(15px 0 0)
        max-width 100%
        b(1, #E6E6E6)
        border-radius 50%




